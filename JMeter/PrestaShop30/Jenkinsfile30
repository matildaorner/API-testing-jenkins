pipeline {
    environment {
            PATH = "C:\\WINDOWS\\SYSTEM32;${JAVA_HOME}\\bin"
    }
    agent {    label 'Grupp1JMeter'    }
    
    stages{
        stage('Run PrestaShop 30 threads/10min') {
            steps {
                bat "${JMETER_HOME}\\bin\\jmeter.bat -Jjmeter.save.saveservice.output_format=xml -n -t ${JMETER_REPO}\\JMeter\\PrestaShop30\\PrestashopTestplan_30.jmx -l ${JMETER_REPO}\\JMeter\\jmeter_report.jtl"
                perfReport 'jmeter_report.jtl'
            }
        }
    }
    post {
        success {
            junit allowEmptyResults: true, testResults: "${WORKSPACE}/test-results/*.xml"                      
        }
    }
}
